<script is:inline>
  // æ‹¡å¼µæ¤œç´¢ãƒ¦ãƒ¼ãƒ†ã‚£ãƒªãƒ†ã‚£ã‚’å®Ÿè£…
  function filterIssuesByQuery(issues, query, options = {}) {
    if (!query || query.length < 2 || !Array.isArray(issues)) {
      return [];
    }
    
    const {
      searchInTitle = true,
      searchInBody = true,
      searchInLabels = false,
      sortBy = 'relevance',
      limit = 5
    } = options;
    
    const lowerQuery = query.toLowerCase();
    const terms = lowerQuery.split(/\s+/).filter(term => term.length > 1);
    
    // è¤‡æ•°ã®æ¤œç´¢èªã«å¯¾å¿œ
    const filteredIssues = issues.filter(issue => {
      let score = 0;
      
      // ã‚¿ã‚¤ãƒˆãƒ«æ¤œç´¢
      if (searchInTitle && issue.title) {
        const titleLower = issue.title.toLowerCase();
        // å®Œå…¨ä¸€è‡´ã¯é«˜ã„ã‚¹ã‚³ã‚¢
        if (titleLower === lowerQuery) {
          score += 100;
        }
        // éƒ¨åˆ†ä¸€è‡´
        else if (titleLower.includes(lowerQuery)) {
          score += 50;
        }
        // å€‹åˆ¥ã®å˜èªä¸€è‡´
        terms.forEach(term => {
          if (titleLower.includes(term)) {
            score += 20;
          }
        });
      }
      
      // æœ¬æ–‡æ¤œç´¢
      if (searchInBody && issue.body) {
        const bodyLower = issue.body.toLowerCase();
        // å®Œå…¨ä¸€è‡´
        if (bodyLower.includes(lowerQuery)) {
          score += 30;
        }
        // å€‹åˆ¥ã®å˜èªä¸€è‡´
        terms.forEach(term => {
          if (bodyLower.includes(term)) {
            score += 10;
            
            // å‡ºç¾å›æ•°ã‚‚è€ƒæ…®
            const occurrences = (bodyLower.match(new RegExp(escapeRegExp(term), 'g')) || []).length;
            if (occurrences > 1) {
              score += Math.min(occurrences, 5) * 2; // æœ€å¤§10ç‚¹ã¾ã§
            }
          }
        });
      }
      
      // ãƒ©ãƒ™ãƒ«æ¤œç´¢
      if (searchInLabels && issue.labels && issue.labels.length > 0) {
        issue.labels.forEach(label => {
          if (label.name && label.name.toLowerCase().includes(lowerQuery)) {
            score += 40;
          }
          
          terms.forEach(term => {
            if (label.name && label.name.toLowerCase().includes(term)) {
              score += 15;
            }
          });
        });
      }
      
      // ã‚¹ã‚³ã‚¢ãŒ0ä»¥ä¸Šãªã‚‰æ¤œç´¢çµæœã¨ã—ã¦å«ã‚ã‚‹
      issue.searchScore = score;
      return score > 0;
    });
    
    // çµæœã®ã‚½ãƒ¼ãƒˆ
    let sortedIssues = [...filteredIssues];
    
    switch (sortBy) {
      case 'newest':
        sortedIssues.sort((a, b) => new Date(b.updated_at) - new Date(a.updated_at));
        break;
      case 'oldest':
        sortedIssues.sort((a, b) => new Date(a.updated_at) - new Date(b.updated_at));
        break;
      case 'relevance':
      default:
        sortedIssues.sort((a, b) => b.searchScore - a.searchScore);
        break;
    }
    
    // æŒ‡å®šä»¶æ•°ã«åˆ¶é™
    return sortedIssues.slice(0, limit);
  }

  function highlightText(text, query) {
    if (!text || !query) return '';
    
    try {
      const terms = query.toLowerCase().split(/\s+/).filter(term => term.length > 1);
      let highlightedText = text;
      
      // è¤‡æ•°ã®æ¤œç´¢èªã«å¯¾å¿œã—ã¦ãƒã‚¤ãƒ©ã‚¤ãƒˆ
      terms.forEach(term => {
        const regex = new RegExp(`(${escapeRegExp(term)})`, 'gi');
        highlightedText = highlightedText.replace(regex, '<mark class="search-highlight">$1</mark>');
      });
      
      return highlightedText;
    } catch (error) {
      console.error('ãƒã‚¤ãƒ©ã‚¤ãƒˆå‡¦ç†ã§ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸ:', error);
      return text;
    }
  }

  function extractContext(text, query, contextLength = 50) {
    if (!text || !query) return '';
    
    try {
      const terms = query.toLowerCase().split(/\s+/).filter(term => term.length > 1);
      const lowerText = text.toLowerCase();
      
      // æœ€ã‚‚é•·ã„æ¤œç´¢èªã‚’è¦‹ã¤ã‘ã‚‹ï¼ˆé•·ã„å˜èªãŒä¸€èˆ¬çš„ã«ãƒ¦ãƒ‹ãƒ¼ã‚¯ãªãŸã‚ï¼‰
      const longestTerm = terms.sort((a, b) => b.length - a.length)[0] || query.toLowerCase();
      
      const matchIndex = lowerText.indexOf(longestTerm);
      
      if (matchIndex >= 0) {
        const startPos = Math.max(0, matchIndex - contextLength);
        const endPos = Math.min(text.length, matchIndex + longestTerm.length + contextLength);
        let excerpt = text.substring(startPos, endPos);
        
        // å‰å¾ŒãŒåˆ‡ã‚Œã¦ã„ã‚‹å ´åˆã¯çœç•¥è¨˜å·ã‚’è¿½åŠ 
        if (startPos > 0) excerpt = '...' + excerpt;
        if (endPos < text.length) excerpt = excerpt + '...';
        
        return excerpt;
      }
      
      // æœ¬æ–‡ã«ã‚­ãƒ¼ãƒ¯ãƒ¼ãƒ‰ãŒå«ã¾ã‚Œãªã„å ´åˆã¯å…ˆé ­ã‚’è¡¨ç¤º
      return text.substring(0, 100) + (text.length > 100 ? '...' : '');
    } catch (error) {
      console.error('ã‚³ãƒ³ãƒ†ã‚­ã‚¹ãƒˆæŠ½å‡ºã§ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸ:', error);
      return text.substring(0, 100) + (text.length > 100 ? '...' : '');
    }
  }

  function escapeRegExp(string) {
    if (!string) return '';
    return string.replace(/[.*+?^${}()|[\]\\]/g, '\\\\$&');
  }

  // ã‚¿ã‚°ã‚«ãƒ©ãƒ¼ã®æœ€é©åŒ–
  function getOptimizedTagStyle(labelName, labelColor) {
    // ç‰¹å®šã®ã‚¿ã‚°ã«ã¯å›ºå®šã®è‰²ã‚’å‰²ã‚Šå½“ã¦ã‚‹
    const tagColors = {
      'documentation': { bg: '#0EA5E9', color: '#FFFFFF' }, // é’ç³»
      'wiki': { bg: '#10B981', color: '#FFFFFF' }, // ç·‘ç³»
      'feature': { bg: '#8B5CF6', color: '#FFFFFF' }, // ç´«ç³»
      'bug': { bg: '#EF4444', color: '#FFFFFF' }, // èµ¤ç³»
      'enhancement': { bg: '#F59E0B', color: '#FFFFFF' }, // ã‚ªãƒ¬ãƒ³ã‚¸ç³»
      'help wanted': { bg: '#EC4899', color: '#FFFFFF' } // ãƒ”ãƒ³ã‚¯ç³»
    };
    
    // ç‰¹å®šã®ã‚¿ã‚°ã«å®šç¾©ã•ã‚Œã¦ã„ã‚‹å ´åˆã¯ãã‚Œã‚’ä½¿ç”¨
    const lowerLabelName = labelName.toLowerCase();
    if (tagColors[lowerLabelName]) {
      return {
        bg: tagColors[lowerLabelName].bg,
        color: tagColors[lowerLabelName].color
      };
    }
    
    // ãã‚Œä»¥å¤–ã¯æä¾›ã•ã‚ŒãŸè‰²ã‚’ä½¿ç”¨ã™ã‚‹ãŒã€ã‚³ãƒ³ãƒˆãƒ©ã‚¹ãƒˆæ¯”ã‚’æ”¹å–„
    const color = labelColor || '888888';
    // æš—ã„èƒŒæ™¯è‰²ã«æ˜ã‚‹ã„ãƒ†ã‚­ã‚¹ãƒˆã‚’ä½¿ç”¨
    return {
      bg: `#${color}`,
      color: isLightColor(color) ? '#000000' : '#FFFFFF'
    };
  }
  
  // è‰²ãŒæ˜ã‚‹ã„ã‹ã©ã†ã‹ã‚’åˆ¤å®š
  function isLightColor(hexColor) {
    // 16é€²æ•°ã®ã‚«ãƒ©ãƒ¼ã‚³ãƒ¼ãƒ‰ã‚’RGBã«å¤‰æ›
    const r = parseInt(hexColor.substr(0, 2), 16);
    const g = parseInt(hexColor.substr(2, 2), 16);
    const b = parseInt(hexColor.substr(4, 2), 16);
    
    // æ˜ã‚‹ã•ã‚’è¨ˆç®— (YIQæ–¹å¼)
    const yiq = ((r * 299) + (g * 587) + (b * 114)) / 1000;
    
    return yiq >= 128; // 128ä»¥ä¸Šãªã‚‰æ˜ã‚‹ã„è‰²ã¨åˆ¤å®š
  }

  // æ¤œç´¢ãƒ’ã‚¹ãƒˆãƒªãƒ¼æ©Ÿèƒ½
  class SearchHistory {
    constructor(maxEntries = 5) {
      this.maxEntries = maxEntries;
      this.history = this.loadHistory();
    }
    
    loadHistory() {
      try {
        const saved = localStorage.getItem('wiki_search_history');
        return saved ? JSON.parse(saved) : [];
      } catch (e) {
        console.error('æ¤œç´¢å±¥æ­´ã®èª­ã¿è¾¼ã¿ã«å¤±æ•—ã—ã¾ã—ãŸ:', e);
        return [];
      }
    }
    
    saveHistory() {
      try {
        localStorage.setItem('wiki_search_history', JSON.stringify(this.history));
      } catch (e) {
        console.error('æ¤œç´¢å±¥æ­´ã®ä¿å­˜ã«å¤±æ•—ã—ã¾ã—ãŸ:', e);
      }
    }
    
    addEntry(query) {
      if (!query || query.trim().length < 2) return;
      
      // åŒã˜ã‚¯ã‚¨ãƒªãŒã‚ã‚Œã°å‰Šé™¤ï¼ˆå¾Œã§å…ˆé ­ã«è¿½åŠ ã™ã‚‹ãŸã‚ï¼‰
      this.history = this.history.filter(entry => entry.query !== query);
      
      // æ–°ã—ã„ã‚¨ãƒ³ãƒˆãƒªã‚’è¿½åŠ 
      this.history.unshift({
        query,
        timestamp: new Date().toISOString()
      });
      
      // æœ€å¤§ä»¶æ•°ã‚’è¶…ãˆãŸã‚‰å¤ã„ã‚‚ã®ã‚’å‰Šé™¤
      if (this.history.length > this.maxEntries) {
        this.history = this.history.slice(0, this.maxEntries);
      }
      
      this.saveHistory();
    }
    
    getEntries() {
      return this.history;
    }
    
    clear() {
      this.history = [];
      this.saveHistory();
    }
  }

  // ã‚¯ãƒ©ã‚¤ã‚¢ãƒ³ãƒˆã‚µã‚¤ãƒ‰æ¤œç´¢æ©Ÿèƒ½ã®æ‹¡å¼µç‰ˆ
  document.addEventListener('DOMContentLoaded', async () => {
    try {
      const searchInput = document.getElementById('search-input');
      const searchResults = document.getElementById('search-results');
      const advancedToggle = document.getElementById('search-advanced-toggle');
