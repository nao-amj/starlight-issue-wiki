---
// Ê§úÁ¥¢„Éê„Éº„Ç≥„É≥„Éù„Éº„Éç„É≥„Éà
import { BASE_PATH } from '../config';
---

<div class="search-container">
  <div class="search-form">
    <span class="search-icon">üîç</span>
    <input 
      type="text" 
      id="search-input" 
      class="search-input" 
      placeholder="Wiki„Éö„Éº„Ç∏„ÇíÊ§úÁ¥¢..."
      aria-label="Ê§úÁ¥¢"
    />
  </div>
  <div id="search-results" class="search-results" role="listbox" tabindex="-1"></div>
</div>

<script is:inline>
  // Ê§úÁ¥¢„É¶„Éº„ÉÜ„Ç£„É™„ÉÜ„Ç£Èñ¢Êï∞„ÇíÁõ¥Êé•„Çπ„ÇØ„É™„Éó„Éà„Å´Âüã„ÇÅËæº„ÇÄ
  function filterIssuesByQuery(issues, query) {
    if (!query || query.length < 2 || !Array.isArray(issues)) {
      return [];
    }
    
    const lowerQuery = query.toLowerCase();
    
    return issues.filter(issue => 
      (issue.title && issue.title.toLowerCase().includes(lowerQuery)) || 
      (issue.body && issue.body.toLowerCase().includes(lowerQuery))
    );
  }

  function highlightText(text, query) {
    if (!text || !query) return '';
    
    try {
      const regex = new RegExp(`(${escapeRegExp(query)})`, 'gi');
      return text.replace(regex, '<mark class="search-highlight">$1</mark>');
    } catch (error) {
      console.error('„Éè„Ç§„É©„Ç§„ÉàÂá¶ÁêÜ„Åß„Ç®„É©„Éº„ÅåÁô∫Áîü„Åó„Åæ„Åó„Åü:', error);
      return text;
    }
  }

  function extractContext(text, query, contextLength = 50) {
    if (!text || !query) return '';
    
    try {
      const lowerText = text.toLowerCase();
      const lowerQuery = query.toLowerCase();
      const matchIndex = lowerText.indexOf(lowerQuery);
      
      if (matchIndex >= 0) {
        const startPos = Math.max(0, matchIndex - contextLength);
        const endPos = Math.min(text.length, matchIndex + lowerQuery.length + contextLength);
        let excerpt = text.substring(startPos, endPos);
        
        // ÂâçÂæå„ÅåÂàá„Çå„Å¶„ÅÑ„ÇãÂ†¥Âêà„ÅØÁúÅÁï•Ë®òÂè∑„ÇíËøΩÂä†
        if (startPos > 0) excerpt = '...' + excerpt;
        if (endPos < text.length) excerpt = excerpt + '...';
        
        return excerpt;
      }
      
      // Êú¨Êñá„Å´„Ç≠„Éº„ÉØ„Éº„Éâ„ÅåÂê´„Åæ„Çå„Å™„ÅÑÂ†¥Âêà„ÅØÂÖàÈ†≠„ÇíË°®Á§∫
      return text.substring(0, 100) + (text.length > 100 ? '...' : '');
    } catch (error) {
      console.error('„Ç≥„É≥„ÉÜ„Ç≠„Çπ„ÉàÊäΩÂá∫„Åß„Ç®„É©„Éº„ÅåÁô∫Áîü„Åó„Åæ„Åó„Åü:', error);
      return text.substring(0, 100) + (text.length > 100 ? '...' : '');
    }
  }

  function escapeRegExp(string) {
    if (!string) return '';
    return string.replace(/[.*+?^${}()|[\]\\]/g, '\\\\$&');
  }

  // „Çø„Ç∞„Ç´„É©„Éº„ÅÆÊúÄÈÅ©Âåñ
  function getOptimizedTagStyle(labelName, labelColor) {
    // ÁâπÂÆö„ÅÆ„Çø„Ç∞„Å´„ÅØÂõ∫ÂÆö„ÅÆËâ≤„ÇíÂâ≤„ÇäÂΩì„Å¶„Çã
    const tagColors = {
      'documentation': { bg: '#0EA5E9', color: '#FFFFFF' }, // ÈùíÁ≥ª
      'wiki': { bg: '#10B981', color: '#FFFFFF' }, // Á∑ëÁ≥ª
      'feature': { bg: '#8B5CF6', color: '#FFFFFF' }, // Á¥´Á≥ª
      'bug': { bg: '#EF4444', color: '#FFFFFF' }, // Ëµ§Á≥ª
      'enhancement': { bg: '#F59E0B', color: '#FFFFFF' }, // „Ç™„É¨„É≥„Ç∏Á≥ª
      'help wanted': { bg: '#EC4899', color: '#FFFFFF' } // „Éî„É≥„ÇØÁ≥ª
    };
    
    // ÁâπÂÆö„ÅÆ„Çø„Ç∞„Å´ÂÆöÁæ©„Åï„Çå„Å¶„ÅÑ„ÇãÂ†¥Âêà„ÅØ„Åù„Çå„Çí‰ΩøÁî®
    const lowerLabelName = labelName.toLowerCase();
    if (tagColors[lowerLabelName]) {
      return {
        bg: tagColors[lowerLabelName].bg,
        color: tagColors[lowerLabelName].color
      };
    }
    
    // „Åù„Çå‰ª•Â§ñ„ÅØÊèê‰æõ„Åï„Çå„ÅüËâ≤„Çí‰ΩøÁî®„Åô„Çã„Åå„ÄÅ„Ç≥„É≥„Éà„É©„Çπ„ÉàÊØî„ÇíÊîπÂñÑ
    const color = labelColor || '888888';
    // Êöó„ÅÑËÉåÊôØËâ≤„Å´Êòé„Çã„ÅÑ„ÉÜ„Ç≠„Çπ„Éà„Çí‰ΩøÁî®
    return {
      bg: `#${color}`,
      color: isLightColor(color) ? '#000000' : '#FFFFFF'
    };
  }
  
  // Ëâ≤„ÅåÊòé„Çã„ÅÑ„Åã„Å©„ÅÜ„Åã„ÇíÂà§ÂÆö
  function isLightColor(hexColor) {
    // 16ÈÄ≤Êï∞„ÅÆ„Ç´„É©„Éº„Ç≥„Éº„Éâ„ÇíRGB„Å´Â§âÊèõ
    const r = parseInt(hexColor.substr(0, 2), 16);
    const g = parseInt(hexColor.substr(2, 2), 16);
    const b = parseInt(hexColor.substr(4, 2), 16);
    
    // Êòé„Çã„Åï„ÇíË®àÁÆó (YIQÊñπÂºè)
    const yiq = ((r * 299) + (g * 587) + (b * 114)) / 1000;
    
    return yiq >= 128; // 128‰ª•‰∏ä„Å™„ÇâÊòé„Çã„ÅÑËâ≤„Å®Âà§ÂÆö
  }

  // „ÇØ„É©„Ç§„Ç¢„É≥„Éà„Çµ„Ç§„ÉâÊ§úÁ¥¢Ê©üËÉΩ
  document.addEventListener('DOMContentLoaded', async () => {
    try {
      const searchInput = document.getElementById('search-input');
      const searchResults = document.getElementById('search-results');
      let issues = [];
      let selectedResultIndex = -1;
      const BASE_PATH = '/starlight-issue-wiki'; // „Åæ„Åü„ÅØÈÅ©Âàá„Å™„Éë„Çπ„ÇíË®≠ÂÆö

      // GitHub API„Åã„Çâissue„Éá„Éº„Çø„ÇíÂèñÂæó
      async function fetchIssues() {
        try {
          const response = await fetch('https://api.github.com/repos/nao-amj/starlight-issue-wiki/issues?state=all&per_page=100');
          if (!response.ok) throw new Error('GitHub API error');
          const allItems = await response.json();
          // „Éó„É´„É™„ÇØ„Ç®„Çπ„Éà„ÇíÈô§Â§ñ„Åô„Çã
          issues = allItems.filter(item => !item.pull_request);
          console.log(`ÂèñÂæó„Åó„ÅüIssueÊï∞: ${issues.length}`);
        } catch (error) {
          console.error('Error fetching issues:', error);
        }
      }

      // Ê§úÁ¥¢ÁµêÊûú„ÅÆ„Ç¢„Ç§„ÉÜ„É†„Å´„Éï„Ç©„Éº„Ç´„Çπ„ÇíË®≠ÂÆö
      function setFocusOnResult(index) {
        const resultItems = searchResults.querySelectorAll('.search-result-item');
        if (resultItems.length === 0) return;
        
        // Ââç„ÅÆÈÅ∏Êäû„Çí„ÇØ„É™„Ç¢
        resultItems.forEach(item => {
          item.classList.remove('search-result-selected');
          item.setAttribute('aria-selected', 'false');
        });
        
        // Êñ∞„Åó„ÅÑÈÅ∏Êäû„ÇíË®≠ÂÆö
        selectedResultIndex = (index + resultItems.length) % resultItems.length;
        const selectedItem = resultItems[selectedResultIndex];
        selectedItem.classList.add('search-result-selected');
        selectedItem.setAttribute('aria-selected', 'true');
        selectedItem.focus();
      }

      // Ê§úÁ¥¢Ê©üËÉΩ
      function performSearch(query) {
        if (!query || query.length < 2) {
          searchResults.innerHTML = '';
          searchResults.style.display = 'none';
          selectedResultIndex = -1;
          return;
        }

        const lowerQuery = query.toLowerCase();
        const matches = filterIssuesByQuery(issues, query);

        if (matches.length === 0) {
          searchResults.innerHTML = '<div class="no-results">Ê§úÁ¥¢ÁµêÊûú„Åå„ÅÇ„Çä„Åæ„Åõ„Çì</div>';
        } else {
          searchResults.innerHTML = matches.slice(0, 5).map((issue, index) => {
            // „Çø„Ç§„Éà„É´ÂÜÖ„ÅÆ„Ç≠„Éº„ÉØ„Éº„Éâ„Çí„Éè„Ç§„É©„Ç§„Éà
            const highlightedTitle = highlightText(issue.title, lowerQuery);
            
            // Êú¨Êñá„ÅÆÈñ¢ÈÄ£ÁÆáÊâÄ„ÇíÊäΩÂá∫„Åó„Å¶„Éè„Ç§„É©„Ç§„Éà
            let excerptHtml = '';
            if (issue.body) {
              const excerpt = extractContext(issue.body, lowerQuery);
              excerptHtml = highlightText(excerpt, lowerQuery);
            }
            
            // „É©„Éô„É´Ë°®Á§∫„ÅÆÂá¶ÁêÜÔºàÊîπÂñÑÁâàÔºâ
            const labelsHtml = issue.labels && issue.labels.length > 0 
              ? `<div class="search-result-labels">
                  ${issue.labels.map(label => {
                    const style = getOptimizedTagStyle(label.name, label.color);
                    return `
                      <span class="search-tag" style="background-color: ${style.bg}; color: ${style.color};">
                        ${label.name}
                      </span>
                    `;
                  }).join('')}
                </div>` 
              : '';
            
            return `
              <a href="${BASE_PATH}/wiki/${issue.number}" 
                 class="search-result-item" 
                 role="option" 
                 id="search-result-${index}" 
                 aria-selected="false" 
                 tabindex="-1">
                <div class="search-result-content">
                  <div class="search-result-header">
                    <div class="search-result-title">${highlightedTitle}</div>
                    <div class="search-result-meta">
                      <span class="search-result-number">#${issue.number}</span>
                      <span class="search-result-date">Êõ¥Êñ∞: ${new Date(issue.updated_at).toLocaleDateString('ja-JP')}</span>
                    </div>
                  </div>
                  ${labelsHtml}
                  ${excerptHtml ? `<div class="search-result-excerpt">${excerptHtml}</div>` : ''}
                </div>
              </a>
            `;
          }).join('');
        }

        searchResults.style.display = 'block';
        selectedResultIndex = -1; // ÈÅ∏Êäû„Çí„É™„Çª„ÉÉ„Éà
      }

      // „Ç§„Éô„É≥„Éà„É™„Çπ„Éä„Éº
      if (searchInput) {
        searchInput.addEventListener('input', (e) => {
          performSearch(e.target.value.trim());
        });

        searchInput.addEventListener('focus', () => {
          if (issues.length === 0) fetchIssues();
        });

        // „Ç≠„Éº„Éú„Éº„Éâ„Éä„Éì„Ç≤„Éº„Ç∑„Éß„É≥
        searchInput.addEventListener('keydown', (e) => {
          if (!searchResults.style.display || searchResults.style.display === 'none') return;
          
          const resultItems = searchResults.querySelectorAll('.search-result-item');
          if (resultItems.length === 0) return;
          
          switch (e.key) {
            case 'ArrowDown':
              e.preventDefault(); // „Éá„Éï„Ç©„É´„Éà„ÅÆÂãï‰Ωú„ÇíÈò≤Ê≠¢
              setFocusOnResult(selectedResultIndex + 1);
              break;
              
            case 'ArrowUp':
              e.preventDefault(); // „Éá„Éï„Ç©„É´„Éà„ÅÆÂãï‰Ωú„ÇíÈò≤Ê≠¢
              setFocusOnResult(selectedResultIndex - 1);
              break;
              
            case 'Enter':
              if (selectedResultIndex >= 0 && selectedResultIndex < resultItems.length) {
                e.preventDefault();
                resultItems[selectedResultIndex].click();
              }
              break;
              
            case 'Escape':
              searchResults.style.display = 'none';
              searchInput.focus();
              break;
          }
        });

        // Ê§úÁ¥¢ÁµêÊûúÂÜÖ„Åß„ÅÆ„Ç≠„Éº„Éú„Éº„Éâ„Éä„Éì„Ç≤„Éº„Ç∑„Éß„É≥
        searchResults.addEventListener('keydown', (e) => {
          const resultItems = searchResults.querySelectorAll('.search-result-item');
          if (resultItems.length === 0) return;
          
          switch (e.key) {
            case 'ArrowDown':
              e.preventDefault();
              setFocusOnResult(selectedResultIndex + 1);
              break;
              
            case 'ArrowUp':
              e.preventDefault();
              setFocusOnResult(selectedResultIndex - 1);
              break;
              
            case 'Escape':
              searchResults.style.display = 'none';
              searchInput.focus();
              break;
          }
        });

        // „ÇØ„É™„ÉÉ„ÇØ‰ª•Â§ñ„ÅÆÂ†¥ÊâÄ„Çí„ÇØ„É™„ÉÉ„ÇØ„Åó„Åü„ÇâÁµêÊûú„ÇíÈùûË°®Á§∫
        document.addEventListener('click', (e) => {
          if (!searchInput.contains(e.target) && !searchResults.contains(e.target)) {
            searchResults.style.display = 'none';
          }
        });
      }

      // ÂàùÊúü„É≠„Éº„Éâ
      fetchIssues();
    } catch (error) {
      console.error('Ê§úÁ¥¢Ê©üËÉΩ„ÅÆÂàùÊúüÂåñ„Å´Â§±Êïó„Åó„Åæ„Åó„Åü:', error);
    }
  });
</script>

<style is:global>
  /* „Ç∞„É≠„Éº„Éê„É´„Çπ„Çø„Ç§„É´„Å®„Åó„Å¶ÈÅ©Áî® */
  .search-container {
    position: relative;
    margin: 1rem 0;
    z-index: 100;
  }

  .search-form {
    position: relative;
  }

  .search-input {
    width: 100%;
    padding: 0.5rem 1rem;
    padding-left: 2.5rem;
    border: 1px solid #ddd;
    border-radius: 0.375rem;
    font-size: 1rem;
    background-color: #fff;
    transition: all 0.2s;
  }

  .dark .search-input {
    background-color: #222;
    border-color: #444;
    color: #fff;
  }

  .search-input:focus {
    outline: none;
    border-color: #4f6df5;
